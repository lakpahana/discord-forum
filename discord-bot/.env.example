# Environment Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_guild_id_for_dev_commands
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=forum
PII_PEPPER=your_256bit_hex_pepper_here
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET=forum-assets
S3_REGION=us-east-1
ADMIN_CREDS=admin:secretpassword
STAFF_CSV_PATH=staff.csv
IMAGE_MAX_MB=10
IMAGE_MAX_W=1920
IMAGE_MAX_H=1080

# Bot Run Mode Configuration
# RUN_MODE: 'watch' for constant monitoring, 'once' for one-time execution
RUN_MODE=watch
# EXIT_AFTER_SYNC: Set to 'true' to exit after historical sync completes (useful for scripts)
EXIT_AFTER_SYNC=false
# REGISTER_COMMANDS: Set to 'true' to register commands even in 'once' mode
REGISTER_COMMANDS=false

# Historical Sync Settings
ENABLE_HISTORICAL_SYNC=false
# Force full sync instead of smart delta sync
FORCE_FULL_SYNC=false
SYNC_GUILD_ID=your_guild_id_to_sync
SYNC_CHANNEL_ID=
SYNC_THREAD_ID=
SYNC_LIMIT=
SYNC_SKIP_EXISTING=true

# Optional: Set to production for production environment
NODE_ENV=development
PORT=3000
